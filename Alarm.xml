<?xml version="1.0" ?>

<settings>
	<setting name="code" value="123456"/>
	
	<!- after this time sensor considers user is not any more in room --> 	
	<setting name="timeOfPresenceSec" value="2"/>
	
	
	<!- number of catches during one second needed to enable alarm -->
	<setting name="retriesInSec" value="1"/>
	
	<!- time for disable alarm before it will generate  -->
	<setting name="waitingTimeInSec" value="30"/>

	<!- time after armed alarm reserved to leave  -->
	<setting name="startWaitingTimeInSec" value="30"/>
	
</settings>
	
<sensors>
    <sensor name="Kuchnia" sensorType="0" threshold="1" scanningPeriod="1" address="44" enabled="1"/>
    <sensor name="Salon" sensorType="0" threshold="1" scanningPeriod="1" address="744" enabled="1"/>
    <sensor name="Gabinet" sensorType="0" threshold="1" scanningPeriod="1" address="64" enabled="1"/>

    <sensor name="Termometr Salon" sensorType="1" threshold="30" scanningPeriod="10" address="4" enabled="1"/>
    <sensor name="Termometr Sypialnia Nati" sensorType="1" threshold="50" scanningPeriod="10" address="7" enabled="1"/>

    <sensor name="Sygnal Alarmowy" sensorType="4" threshold="30" scanningPeriod="10" address="4" enabled="1"/>
</sensors>
